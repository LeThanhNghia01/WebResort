@using DemoDB2.Models
@using PagedList
@using PagedList.Mvc
@model IPagedList<DatPhong>
@{
    ViewBag.Title = "Danh sách đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Danh sách đặt phòng của bạn</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Mã đặt phòng</th>
                    <th>Loại phòng</th>
                    <th>Ngày đặt</th>
                    <th>Ngày nhận phòng</th>
                    <th>Ngày trả phòng</th>
                    <th>Trạng thái</th>
                    <th>Thành tiền</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var hoaDon = ViewBag.HoaDons != null && ViewBag.HoaDons.ContainsKey(item.PhongID)
                        ? ViewBag.HoaDons[item.PhongID]
                        : null;

                    <tr>
                        <td>@item.DatPhongID</td>
                        <td>@item.Phong.LoaiPhong.TenLoai</td>
                        <td>@item.NgayDatPhong?.ToString("dd/MM/yyyy") ?? "N/A"</td> <!-- Kiểm tra null -->
                        <td>@item.NgayNhanPhong?.ToString("dd/MM/yyyy") ?? "N/A"</td> <!-- Kiểm tra null -->
                        <td>@item.NgayTraPhong?.ToString("dd/MM/yyyy") ?? "N/A"</td> <!-- Kiểm tra null -->
                        <td>
                            @if (item.TinhTrangPhong != null)
                            {
                                <span class="badge @(item.IDTinhTrang == 2 ? "bg-warning" :
                                       item.IDTinhTrang == 3 ? "bg-success" :
                                       item.IDTinhTrang == 4 ? "bg-info" : "bg-secondary")">
                                    @item.TinhTrangPhong.TenTinhTrang
                                </span>
                            }
                        </td>
                        <td>
                            @if (hoaDon != null)
                            {
                                @hoaDon.TongTien.ToString("N0") <span>VNĐ</span>
                            }
                            else
                            {
                                <span>Chưa có</span>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "ChiTietDatPhong", new { id = item.DatPhongID }, new { @class = "btn btn-info btn-sm" })
                            @if (item.IDTinhTrang == 2) // Chỉ hiển thị nút hủy khi đang chờ xác nhận
                            {
                                using (Html.BeginForm("HuyDatPhong", "DatPhong", new { id = item.DatPhongID }, FormMethod.Post, new { style = "display: inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn hủy đặt phòng này?')">
                                        Hủy đặt phòng
                                    </button>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("ViewDatPhong", new { page }))
    </div>
</div>