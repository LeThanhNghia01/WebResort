    .bang {
        margin-left: 950px;
        width: 450px;
        background-color: white;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px #ccc;
    }

        .bang th {
            background-color: #000;
            color: #fff;
            font-weight: bold;
        }

        .bang td {
            padding: 10px;
        }

    body {
        background-image: url('/Content/images/green.jpg');
        background-repeat: no-repeat;
        background-size: 50%;
        margin-right: auto;
    }
</style>
